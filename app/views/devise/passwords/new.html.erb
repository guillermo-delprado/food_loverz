<% content_for :form_wrap do %>
  <h2 class="text-3xl font-bold mb-6">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-300 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-indigo-600 ring ring-transparent focus:ring-4 focus:ring-indigo-50" %>
    </div>

    <%= f.submit "Send me reset password instructions", class: "font-medium py-3 px-6 rounded cursor-pointer no-underline bg-indigo-600 text-white hover:bg-indigo-700 w-full" %>

  <% end %>

  <div class="my-6">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
<%= render "devise/shared/form_wrap" %>
