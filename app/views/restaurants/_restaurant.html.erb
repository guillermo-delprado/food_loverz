<div id="<%= dom_id restaurant %>">

  <% if restaurant.media%>
      <div class="w-2/12">
        <%= link_to restaurant do %>
          
            <%= image_tag @restaurant.media, alt:"#", class: "" %>
          
        <% end %>
      </div>
    <% end %>

  <div class="flex flex-wrap items-center justify-between">
    <% if user_signed_in? && current_user.id == restaurant.user_id %>
            <div class="pt-4 flex flex-wrap items-center space-x-4">
              <%= link_to edit_restaurant_path(restaurant), class: "no-underline" do %>
                <%= render_svg "icons/edit", title: "Edit", styles: "fill-current text-gray-400 w-5 h-5 hover:text-orange-600" %>
              <% end %>

              <%= button_to restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure you want to delete this review?" },  class: "no-underline block mt-px" do %>
                <%= render_svg "icons/delete", title: "Delete", styles: "fill-current text-gray-400 w-5 h-5 hover:text-orange-600" %>
              <% end %>
            </div>
      <% end %>
  </div>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= restaurant.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= restaurant.category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= restaurant.address %>
  </p>

  
</div>
