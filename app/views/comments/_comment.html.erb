<%= turbo_frame_tag comment do %>
  <div class="border p-4 rounded my-4 flex items-start">

    <div>
      <p class="font-semibold"><%= comment.user.username %></p>
      <div class="prose prose-orange"><%= comment.comment %></div>

      <% if user_signed_in? && current_user.id == comment.user_id %>
        <div class="flex items-end space-x-3">
          <%= link_to "Edit comment", edit_review_comment_path(comment.review, comment), class: "text-orange-600 underline" %>

          <%= button_to "Delete comment", review_comment_path(comment.review, comment), method: :delete, class: "text-orange-600 underline"
    %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
